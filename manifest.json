{
  "manifest_version": 3,
  "name": "Window Open Blocker",
  "version": "1.0",
  "description": "Blocks all window.open() calls with a toggleable UI",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
